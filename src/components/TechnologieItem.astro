---
import { IoLogoJavascript } from "react-icons/io5";
import { FaNodeJs, FaReact } from "react-icons/fa";
import { BiLogoTailwindCss, BiLogoTypescript } from "react-icons/bi";
import { SiMui, SiReactivex } from "react-icons/si";

import type { IconType } from "react-icons/lib";

import type { Technology } from "../models/Project";

interface Props {
  techName: Technology;
}
const { techName }: Props = Astro.props;

let TechIcon: IconType;
let techIconColor = "";
switch (techName) {
  case "javascript":
    TechIcon = IoLogoJavascript;
    techIconColor = "yellow";
    break;
  case "react":
    TechIcon = FaReact;
    techIconColor = "skyblue";
    break;
  case "tailwind":
    TechIcon = BiLogoTailwindCss;
    techIconColor = "skyblue";
    break;
  case "typescript":
    TechIcon = BiLogoTypescript;
    techIconColor = "skyblue";
    break;
  case "mui":
    TechIcon = SiMui;
    techIconColor = "skyblue";
    break;
  case "rxjs":
    TechIcon = SiReactivex;
    techIconColor = "magenta";
    break;
  case "nodeJS":
    TechIcon = FaNodeJs;
    techIconColor = "green";
    break;
}
---

<li
  class="inline-flex items-center px-2 py-1 text-sm rounded-xl bg-slate-400 dark:bg-slate-600"
>
  <TechIcon aria-label={techName} color={techIconColor} />
  <span class="inline-block ml-1 capitalize">{techName}</span>
</li>
